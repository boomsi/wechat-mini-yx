.container {
  background-color: #f4f4f4;
  height: 100vh;
}
.center-top {
  width: 100%;
  height: 280rpx;
  background-color: #333333;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-sizing: border-box;
}
.center-top .head-img {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.center-top text {
  color: #fff;
  margin-left: 20rpx;
}
.center-top .head-more {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  right: 40rpx;
}

.center-item {
  display: flex;
  flex-wrap: wrap;
}
.center-item navigator {
  padding: 20rpx 0;
  box-sizing: border-box;
  width: 33.3%;
  height: 184rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
  position: relative;
}
.center-item navigator image {
  width: 52rpx;
  height: 52rpx;
  margin-bottom: 20rpx;
}
.center-item navigator .txt {
  font-size: 12px;
}
.center-item navigator:nth-of-type(3n+1):after,
.center-item navigator:nth-of-type(3n+2):after {
  content: "";
  display: inline-block;
  width: 1rpx;
  height: 100%;
  position: absolute;
  right: 0;
  border-right: 1rpx solid #ccc;
}