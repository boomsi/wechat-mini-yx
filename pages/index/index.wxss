.search {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  color: #666;
  font-size: 14px;
  background-color: #fff;
}
.search .input {
  background-color: #ededed;
  height: 56rpx;
  width: 90%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search .icon {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  width: 28rpx;
  height: 28rpx;
  background-size: 100%;
  margin-right: 10rpx;
}
.swiper swiper,
.swiper image {
  width: 100%;
  height: 417rpx;
}
.banner {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 180rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.banner-item view {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  color: #666;
}
.banner image {
  width: 58rpx;
  height: 58rpx;
  background-size: cover;
  background-color: #f40;
}
.a-select {
  font-size: 0;
}
.txt {
  height: 130rpx;
  line-height: 65px;
  text-align: center;
  background-color: #fff;
  font-size: 16px;
}
.txt-goods {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}
/*品牌制造商*/
.a-select-item {
  width: 50%;
  position: relative;
}
.a-select-item image{
  width: 100%;
  height: 252rpx;
}
.a-select-item .mt {
  position: absolute;
  z-index: 999;
  top: 0;
  left: 0;
  padding: 27rpx 31rpx;
  display: flex;
  flex-direction: column;
}
.a-select-item .mt .brand {
  font-size: 16px;
}
.a-select-item .mt .price {
  font-size: 12px;
  color: #999;
}
/*新品首发*/
.b-select {
  margin-bottom: 20rpx;
}
.b-select-item {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.b-select-item image {
  width: 302rpx;
  height: 302rpx;
}
.b-select-item .mt {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.b-select-item .mt .b-select-name {
  font-size: 16px;
}
.b-select-item .mt .b-select-price {
  color: #be4946;
  font-size: 16px;
}