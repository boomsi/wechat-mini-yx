.search {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  color: #666;
  font-size: 14px;
  background-color: #fff;
}
.search .input {
  background-color: #ededed;
  height: 56rpx;
  width: 90%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search .icon {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  width: 28rpx;
  height: 28rpx;
  background-size: 100%;
  margin-right: 10rpx;
}
.swiper swiper,
.swiper image {
  width: 100%;
  height: 417rpx;
}
.banner {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 180rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.banner-item {
  width: 20%;
  padding: 30rpx 0;
}
.banner-item view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #666;
}
.banner image {
  width: 58rpx;
  height: 58rpx;
}
.a-select {
  font-size: 0;
}
.txt {
  height: 130rpx;
  line-height: 65px;
  text-align: center;
  background-color: #fff;
  font-size: 16px;
}
.a-select .txt-goods {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}
/*品牌制造商*/

.a-select-item {
  width: 50%;
  position: relative;
}
.a-select-item image{
  width: 100%;
  height: 252rpx;
}
.a-select-item .mt {
  position: absolute;
  z-index: 999;
  top: 0;
  left: 0;
  padding: 27rpx 31rpx;
  display: flex;
  flex-direction: column;
}
.a-select-item .mt .brand {
  font-size: 16px;
}
.a-select-item .mt .price {
  font-size: 12px;
  color: #999;
}
/*新品首发*/
.b-select {
  margin-bottom: 20rpx;
}
.b-select .txt-goods {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}
.b-select-item {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
}
.b-select-item image {
  width: 302rpx;
  height: 302rpx;
}
.b-select-item .mt {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.b-select-item .mt .b-select-name {
  font-size: 16px;
}
.b-select-item .mt .b-select-price {
  color: #be4946;
  font-size: 16px;
}
/* 人气推荐 */
.c-select-item {
  padding: 0 10rpx;
  background-color: #fff;
}
.c-select-item navigator {
  border-top: 1rpx solid #ccc;
  display: flex;
}
.c-select-item navigator image {
  width: 240rpx;
  height: 240rpx;
  flex-grow: 2;
}
.c-select-item navigator .c-select-text {
  flex-grow: 8;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.c-select-text .title {
  font-size: 15px;
}
.c-select-text .detail {
  color: #ccc;
  font-size: 12px;
  padding: 10rpx 0;
}
.c-select-text .price {
  color: #be4946;
  font-size: 16px;
}
.d-select {
  margin-top: 20rpx;
}
.d-select-item {
  background-color: #fff;
  height: 532rpx;
  display: flex;
  overflow: auto;
  scroll-behavior: scroll;
}
.d-select-item navigator {
  padding-left: 30rpx;
}
.d-select-item navigator image {
  width: 680rpx;
  height: 386rpx;
}
.d-select-text {
  display: flex;
  flex-direction: column;
}
.d-select-text .title {
  font-size: 15px;
  margin-top: 20rpx;
}
.d-select-text .title .price {
  color: #be4946;
  font-size: 16px;
  margin-left: 20rpx;
}
.d-select-text .detail {
  font-size: 12px;
  color: #ccc;
  margin-top: 10rpx;
}
/* 首页循环样式 */
.e-select {
  background-color: #fff;
  margin-top: 20rpx;
}
.e-select .txt {
  font-size: 14px;
}
.e-select-item navigator {
  width: 345rpx;
  display: inline-block;
  margin: 0 0 20rpx 20rpx;
}
.e-select-item navigator image {
  background-color: #f8f8f8;
  width: 344rpx;
  height: 344rpx;
}
.e-select-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.e-select-text .title {
  font-size: 14px;
}
.e-select-text .price {
  color: #be4946;
  font-size: 14px;
}
