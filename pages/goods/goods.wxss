.a-item-txt {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
}
.a-item-header {
  font-size: 12px;
  color: #aaa;
  margin-bottom: 30rpx;
}
.a-item-home {
  font-size: 12px;
  color: #f7a551;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  border: 2rpx solid #f7a551;
  margin: 20rpx;
}
.a-item-home::after {
  content: "";
  width: 10rpx;
  height: 10rpx;
  display: inline-block;
  transform: rotate(45deg);
  margin: 0 6rpx 0;
  border: 2rpx solid #f7a551;
  border-left: 2rpx solid transparent;
  border-bottom: 2rpx solid transparent;
}
.select-page {
  background-color: #fff;
  width: 100%;
  font-size: 15px;
  position: relative;
}
.select-page text {
  padding: 30rpx;
  display: inline-block;
}