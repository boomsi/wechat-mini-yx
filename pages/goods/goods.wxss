.fixed-header {
  height: 100rpx;
  width: 100%;
  position: fixed;
  display: flex;
  background-color: #fff;
  bottom: 0;
  border: 1rpx solid #eee;
}
.fixed-header image {
  width: 44rpx;
  height: 44rpx;
}
.fixed-header view {
  line-height: 100rpx;
  vertical-align: middle;
  text-align: center;
}
.fixed-header .collect,
.fixed-header .shopcar {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 162rpx;
  border-right: 1rpx solid #eee;
}
.fixed-header .start-pay,
.fixed-header .add-shopcar {
  border-right: 1rpx solid #eee;
  width: 211rpx;
  font-size: 14px;
}
.fixed-header .add-shopcar {
  border: 0;
  background-color: #b4282d;
  color: #fff;
}
