.concat {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.concat .header {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.concat .header text:nth-of-type(1) {
  font-size: 15px;
  padding: 0 20rpx;
}
.concat .header text:nth-of-type(2) {
  font-size: 15px;
  column-count: #666;
  padding: 0 20rpx;
  position: relative;
}
.active {
  color: #b72b2b;
  position: relative;
}
.active::after {
  content: "";
  width: 100%;
  height: 4rpx;
  background-color: #b72b2b;
  position: absolute;
  bottom: -20rpx;
  left: 0;
}
.concat-body {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.concat-body .time {
  font-size: 12px;
  text-align: right;
  color: #999;
}
.concat-body .content {
  font-size: 14px;
  margin: 30rpx 0;
}
.concat-body .photo image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
}
.show-big {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
}
.show-big image {
  width: 100%;
  height: 600rpx;
  position: absolute;
  top: 50%;
  left: 50%;

  transform: translate(-50%, -50%);
}