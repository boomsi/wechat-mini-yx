.header {
  background-color: #fff;
}
.header-top {
  position: relative;
}
.header-top image {
  height: 290rpx;
  width: 100%;
}
.header-top text {
  position: absolute;
  top: 50%;
  left: 50%;
  color: #fff;
  transform: translate(-50%, -50%);
}
.header-top text:after {
  position: absolute;
  height: 1rpx;
  width: 80%;
  content: "";
  background-color: #fff;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
}
.header-bottom {
  font-size: 15px;
  padding: 40rpx;
  color: #666;
}
.goods-item {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  margin-top: 20rpx;
}
.goods-item navigator {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.goods-item navigator image {
  width: 302rpx;
  height: 302rpx;
}
.goods-title {
  font-size: 14px;
  display: block;
  overflow: hidden;
  height: 40rpx;
}
.price {
  margin-bottom: 10rpx;
}
.goods-item navigator::after {
  position: absolute;
  content: "";
  width: 1rpx;
  height: 100%;
  right: 0;
  top: 0;
  background-color: #eee;
  display: inline-block;
}