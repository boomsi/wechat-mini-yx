.usual-txt {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 72rpx;
  font-size: 12px;
  color: #666;
  text-align: center;
  line-height: 72rpx;
}
.usual-txt text {
  position: relative;
  padding: 0 40rpx;
}
.usual-txt text::before {
  content: "";
  width: 8rpx;
  height: 8rpx;
  background-color: red;
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -4rpx;
  border-radius: 50%;
}